<div>
	<form id="filter" action="/filter/" method="post">
        <label for="assignee">Assignee</label>
        <select id="assignee">
            <option value="all" selected> -= All assignees =- </option>
            #foreach($assignee in $assignees)
            <option value="$assignee">$assignee</option>
            #end
        </select>
        <div class="form-actions">
            <input type="submit" value="find" />
        </div>
    </form>
</div>
<div>
    <table id="tasks" border="1">
        <tr>
            <th>Id</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <th>Assignee</th>
            <th>Summary</th>
        </tr>
        #foreach($task in $tasks)
        <tr>
            <td>$task.id</td>
            <td>$task.startDate</td>
            <td>$task.endDate</td>
            <td>$task.assignee</td>
            <td>$task.summary</td>
        </tr>
        #end
    </table>
</div>
